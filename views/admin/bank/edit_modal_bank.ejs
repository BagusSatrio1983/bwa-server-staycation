<!-- Button trigger modal -->

<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Bank</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group mb-3"> 
            <label for="name" class="form-label">Name Bank</label>
            <input
              type="text"
              class="form-control nameBank" 
              name="nameBank"
              placeholder="Enter Name Bank"
              required="true"
            />
          </div>

          <div class="form-group mb-3"> 
            <label for="name" class="form-label">Nomor Rekening</label>
            <input
              type="text"
              class="form-control nomorRekening"
              name="nomorRekening"
              placeholder="Enter Nomor Rekening"
              required="true"
            />
          </div>

          <div class="form-group mb-3"> 
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control name"
              name="name"
              placeholder="Enter Name "
              required="true"
            />
          </div>

          <div class="form-group mb-3"> 
            <label for="name" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              name="image"
            />
          </div>
          <span>Pilih gambar untuk update image</span>
        </div>

        <div class="modal-footer">
          <input type="hidden" class="id" name="id"/>

          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
